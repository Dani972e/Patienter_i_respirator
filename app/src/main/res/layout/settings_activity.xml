        app:layout_constraintBottom_toBottomOf="@+id/input_btn"
        app:layout_constraintEnd_toEndOf="@+id/input_btn"
        app:layout_constraintStart_toStartOf="@+id/input_btn"
        app:layout_constraintTop_toTopOf="@+id/input_btn"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/sound_view"
        android:layout_width="wrap_content"
