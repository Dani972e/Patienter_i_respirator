<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.respirator.i.patienter.patienter_i_respirator.MainActivity">




    <ImageView
        android:id="@+id/game_btn"
        android:layout_width="440dp"
        android:layout_height="280dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_rounded"
        android:padding="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/call_btn"
        app:layout_constraintHorizontal_bias="0.01"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.501"
        app:srcCompat="@drawable/ic_gamepad" />


    <ImageView
        android:id="@+id/communication_btn"
        android:layout_width="440dp"
        android:layout_height="280dp"
        android:background="@drawable/button_rounded"
        android:backgroundTint="@color/blue"
        android:padding="50dp"
        app:srcCompat="@drawable/ic_communication"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/call_btn"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.99"
        app:layout_constraintVertical_bias="0.501" />


    <ImageView
        android:id="@+id/call_btn"
        android:layout_width="1300dp"
        android:layout_height="110dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/red"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/kald" />

    <ImageView
        android:id="@+id/settings"
        android:layout_width="45dp"
        android:layout_height="44dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/backgroundColor"
        android:tint="@color/grey"
        app:layout_constraintBottom_toBottomOf="@+id/call_btn"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_settings" />

    <TextView
        android:id="@+id/game_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/spil"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/game_btn"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/game_btn"
        app:layout_constraintTop_toTopOf="@+id/game_btn"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/game_btn"
        android:layout_marginBottom="5dp"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintVertical_bias="0.995" />

    <TextView
        android:id="@+id/communication_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="@string/kommunikation"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/communication_btn"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/communication_btn"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/communication_btn"
        app:layout_constraintTop_toTopOf="@+id/communication_btn"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.99" />

    <TextView
        android:id="@+id/call_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/kald"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/call_btn"
        app:layout_constraintLeft_toLeftOf="@+id/call_btn"
        app:layout_constraintRight_toRightOf="@+id/call_btn"
        app:layout_constraintTop_toTopOf="@+id/call_btn" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="-61dp" />


</android.support.constraint.ConstraintLayout>
